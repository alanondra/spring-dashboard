{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"./src/main/resources/ts/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
