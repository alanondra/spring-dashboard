root=true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4
trim_trailing_whitespace = false

[*.{css,scss}]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{htm,html,xhtm,xhtml,pebble}]
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = false

[*.gradle]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{xml,xsl}]
indent_style = tab
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2
